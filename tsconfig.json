{
  "compilerOptions": {
    // "rootDir": "src",
    "outDir": ".next",
    "baseUrl": "src",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "sourceMap": true,
    "removeComments": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@components/*": [
        "./components/*"
      ],
      "@apis/*": [
        "./apis/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@app/*": [
        "./app/*"
      ],
      "@config": [
        "../config.ts"
      ],
      "@constants/*": [
        "./constants/*"
      ],
      "@types/*": [
        "./@types/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}